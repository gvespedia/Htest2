<mvc:View controllerName="com.gv.hackathon.Hackathon5.controller.WorkOrders" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" displayBlock="true"
	xmlns:ng="sap.suite.ui.commons.networkgraph" xmlns:l="sap.ui.layout" xmlns:layout="sap.suite.ui.commons.networkgraph.layout"
	xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:vk="sap.ui.vk" xmlns:core="sap.ui.core">
	<SplitApp id="SplitAppContainer" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
		<detailPages>
			<Page id="detail" title="Details" class="sapUiStdPage">
				<headerContent>
					<Button id="popoverButton" icon="sap-icon://message-popup" text="1" type="Emphasized" press="handleMessagePopoverPress"/>
				</headerContent>
				<content>
					<ObjectHeader id="orderHeader" icon="sap-icon://machine" iconDensityAware="false" iconAlt="{Id}" title="{Id}" number="{Equipment}">
						<statuses>
							<ObjectStatus text="Priority: { path: 'Priority' }" state="{ path: 'Priority', formatter: '.priorityFormatter' }"/>
						</statuses>
						<attributes>
							<ObjectAttribute text="Requested By: {RequestedBy}"/>
							<ObjectAttribute text="Expected Start Date: {ExpectedStartDate}"/>
						</attributes>
					</ObjectHeader>
					<IconTabBar id="iconTabBar" expanded="false" class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter key="info" icon="sap-icon://hint" text="Info">
								<VBox>
									<f:Form id="infoForm" editable="false">
										<f:title>
											<core:Title text="Info"/>
										</f:title>
										<f:layout>
											<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
												emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
										</f:layout>
										<f:formContainers>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="Requested by">
														<f:fields>
															<Text text="{RequestedBy}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Requested date">
														<f:fields>
															<Text text="{RequestDate}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Expected start date">
														<f:fields>
															<Text text="{ExpectedStartDate}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Expected conclusion date">
														<f:fields>
															<Text text="{ExpectedEndDate}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Work center">
														<f:fields>
															<Text text="{WorkCntr}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Status">
														<f:fields>
															<Text text="{Status}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Root cause">
														<f:fields>
															<Text text="{RootCause}"/>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
								</VBox>
							</IconTabFilter>
							<IconTabSeparator icon=""/>
							<IconTabFilter key="tasks" icon="sap-icon://task" text="Tasks">
								<Table id="operationsTable" inset="false" items="{ path: 'Operations' }">
									<headerToolbar>
										<Toolbar>
											<content>
												<Title text="Operations" level="H2"/>
											</content>
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Operation"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true">
											<Text text="Est. H"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true">
											<Text text="Act. H"/>
										</Column>
										<Column>
											<Text text="Status"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<ObjectIdentifier title="{Description}" text="{Activity}"/>
												<Text text="{EstimatedHours}"/>
												<Text text="{ActualHours}"/>
												<Text text="{OperationStatus}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</IconTabFilter>
							<IconTabSeparator icon=""/>
							<IconTabFilter key="components" icon="sap-icon://wrench" text="Components">
								<Table id="componentsTable" inset="false" items="{ path: 'Components' }">
									<headerToolbar>
										<Toolbar>
											<content>
												<Title text="Components" level="H2"/>
											</content>
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Component"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true">
											<Text text="Req. Qty"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true">
											<Text text="Stock Qty"/>
										</Column>
										<Column>
											<Text text="Used Qty"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<ObjectIdentifier title="{Description}" text="{Matnr}"/>
												<Text text="{ReqQty}"/>
												<Text text="{StockQty}"/>
												<MaskInput value="{UsedQty}" mask="9999" placeholderSymbol=" "></MaskInput>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</IconTabFilter>
							<IconTabSeparator icon=""/>
							<IconTabFilter key="equipment" icon="sap-icon://machine" text="Equipment">
								<ng:Graph orientation="TopBottom" id="graph" layout="Layered" searchSuggest="suggest" search="search" nodes="{/nodes}" lines="{/lines}">
									<ng:layoutAlgorithm>
										<layout:LayeredLayout mergeEdges="true" nodePlacement="Simple" nodeSpacing="40"/>
									</ng:layoutAlgorithm>
									<ng:nodes>
										<ng:Node icon="sap-icon://action-settings" key="{id}" description="{title}" width="90" collapsed="{collapsed}" attributes="{attributes}"
											showActionLinksButton="false" showDetailButton="false" descriptionLineSize="0" shape="Box">
											<ng:customData>
												<core:CustomData key="description" value="{description}"/>
												<core:CustomData key="production-plant" value="{production-plant}"/>
												<core:CustomData key="purchase-price" value="{purchase-price}"/>
												<core:CustomData key="location" value="{location}"/>
												<core:CustomData key="status" value="{status}"/>
												<core:CustomData key="temperature" value="{temperature}"/>
												<core:CustomData key="estimated-tol" value="{estimated-tol}"/>
												<core:CustomData key="is-parent" value="{is-parent}"/>
												<core:CustomData key="parent" value="{parent}"/>
											</ng:customData>
											<ng:attributes>
												<ng:ElementAttribute label="{label}" value="{value}"/>
											</ng:attributes>
											<ng:image>
												<ng:NodeImage src="{src}" width="80" height="100"/>
											</ng:image>
										</ng:Node>
									</ng:nodes>
									<ng:lines>
										<ng:Line from="{from}" to="{to}" arrowOrientation="None" press="linePress"/>
									</ng:lines>
								</ng:Graph>
							</IconTabFilter>
							<IconTabSeparator icon=""/>
							<IconTabFilter key="viewer" icon="sap-icon://attachment" text="Attachment">
								<MessageStrip id="vdsMessageStrip" text="No vds file available for this equipment" type="Information" showIcon="true"/>
								<vk:Viewer id="viewer" toolbarTitle="3D Viewer" width="100%" height="600px"></vk:Viewer>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<footer>
					<Toolbar id="detailFooterToolbar">
						<ToolbarSpacer/>
						<Button id="startButton" text="Start" type="Accept" press="onStart"/>
						<Button id="forwardButton" text="Forward" press="onForward"/>
						<Button id="holdButton" text="Hold" press="onHold"/>
						<Button id="closeButton" text="Close" press="onClose"/>
					</Toolbar>
				</footer>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master" title="Work Orders" class="sapUiStdPage">
				<content>
					<List id="masterList" items="{/WorkOrders}" mode="SingleSelectMaster" selectionChange="onListSelectionChange">
						<items>
							<ObjectListItem title="{Id}" number="{Equipment}">
								<firstStatus>
									<ObjectStatus text="{ path: 'Priority' }" state="{ path: 'Priority', formatter: '.priorityFormatter' }"/>
								</firstStatus>
								<attributes>
									<ObjectAttribute text="{RequestDate}"/>
									<ObjectAttribute text="Type: {Type}"/>
									<ObjectAttribute text="Status: {Status}"/>
								</attributes>
							</ObjectListItem>
						</items>
					</List>
				</content>
				<footer>
					<Toolbar></Toolbar>
				</footer>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>